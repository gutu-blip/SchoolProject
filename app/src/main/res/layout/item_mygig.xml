<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                android:maxLines="1"
                android:text="Web Development"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <View
                android:id="@+id/horizontal_border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="#4DAAAAAA"
                android:layout_below="@+id/tv_category"
                />

            <TextView
                android:id="@+id/tv_leads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:text="3 engagements"
                android:textColor="@color/accent_lime"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="3dp"
                android:textSize="21sp"
                android:text="Looking for someone good in Flutter"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tv_leads"
                android:textColor="#AD000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="-2dp"
                android:maxLines="11"
                android:text="@string/dummytext"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_desc"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:text="Compensation: Ksh. 3000 per page typed"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout1"
                android:layout_marginTop="-3dp">

                <View
                    android:id="@+id/border"
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_alignBottom="@id/btn_delete"
                    android:layout_toRightOf="@id/tv_time"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="19 Nov 2022"
                    android:layout_alignBottom="@id/btn_delete"
                    android:textAllCaps="false"
                    android:textColor="#808080"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_toRightOf="@+id/border"
                    android:text="Technical University of Kenya"
                    android:textAlignment="gravity"
                    android:layout_alignBottom="@id/btn_delete"
                    android:textColor="#808080"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/btn_delete"
                    android:src="@drawable/ic_delete"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/accent_red"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
